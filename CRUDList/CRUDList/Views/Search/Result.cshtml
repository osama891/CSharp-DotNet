

@model IEnumerable<CRUDList.Models.Task>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Employee List";
}

<div class="card-deck">
    @foreach (var employee in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3>@employee.Title</h3>
            </div>
            <img class="card-img-top" src="~/images/noimage.jpg" />
            <div class="card-footer text-center">
                <a href="~/home/details/@employee.Id" class="btn btn-primary">View</a>
                <a href="~/home/edit/@employee.Id" class="btn btn-primary">Edit</a>
                <a href="~/home/delete/@employee.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>